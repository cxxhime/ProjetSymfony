{% extends 'base.html.twig' %}

{% block title %}Tous les posts{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Tous les posts</h1>

    {% if posts is empty %}
        <div class="alert alert-info">
            Aucun post n'a été créé pour le moment.
        </div>
    {% else %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        {% if post.images %}
                            <img src="{{ asset('uploads/posts/' ~ post.images) }}" class="card-img-top" alt="Image du post">
                        {% endif %}
                        <div class="card-body">
                            <p class="card-text">{{ post.description|slice(0, 100) }}{% if post.description|length > 100 %}...{% endif %}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Posté par {{ post.user.username }} 
                                    le {{ post.createdAt|date('d/m/Y H:i') }}
                                </small>
                                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-sm btn-primary">
                                    Voir plus
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}