{% extends 'base.html.twig' %}

{% block title %}Fil d'actu{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="post-card">
            <div class="post-header">
                <img src="{{ asset('images/user.jpg') }}" alt="pp" class="pp">
                <span>{{ post.username }}</span>  <!-- Affichage du username -->
            </div>
            <img src="{{ asset('images/' ~ post.images) }}" alt="post" class="post-img">
            <div class="post-actions">
                <i class="fa-regular fa-heart"></i>
                <i class="fa-regular fa-comment"></i>
            </div>
        </div>
    {% endfor %}
{% endblock %}






